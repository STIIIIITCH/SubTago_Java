<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="편의시설"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="#A4C6A5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btnline1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginRight="54dp"
            android:backgroundTint="#0D3692"
            android:text="엘리베이터"/>
        <Button
            android:id="@+id/btnline2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:backgroundTint="#33A23D"
            android:text="자전거보관소"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnline3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginRight="54dp"
            android:backgroundTint="#FE5D10"
            android:text="고객안내센터"/>
        <Button
            android:id="@+id/btnline4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:backgroundTint="#00A2D1"
            android:text="관광안내소"/>
    </LinearLayout>


    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="20dp"
